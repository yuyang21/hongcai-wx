/* register.wxss */
/*@import "../templates/logo/logo.wxss";*/
.logo-icon {
  display: block;
  width: 45%;
  height: 100rpx;
  margin: 50rpx auto 50rpx;
}
.mobile, .pic-capcha, .mob-capcha, .password, .register {
  padding: 0 40rpx;
}
input {
  border-bottom: 1px solid #bfbfbf;
  font-size: 15px;
  height: 110rpx;
  /*line-height: 120px;*/
} 
.mobile-placeholder {
  color: #bfbfbf;
  width: 100%;
  /*line-height: 120px;*/
}
.pic-capcha .pic-ipt {
  width: 70%;
  /*display: inline-block;*/
  margin-right: 0;
  float: left;
}
.pic-capcha .capcha {
  width: 24%;
  /*display: inline-block;*/
  float: right;
  height: 70rpx;
  margin-top: 39rpx;
}

.mob-capcha input {
  margin-right: 0;
  float: left;
  width: 68%;
}
.mob-capcha .capcha {
  width: 32%;
  float: right;
  font-size: 13px;
  height: 110rpx;
  line-height: 120rpx;
  color: #ff611d;
  text-align: center;
  border-bottom: 1px solid #bfbfbf;
}
@media(min-width: 320px) {
  input {
    font-size: 14px;
  }
  input[type='text'] {
    width: 60%;
  }
}
@media(min-width: 375px) {
  input {
    font-size: 16px;
  }
}
.password {
  position: relative;
}
.password input {
  width: 100%;
  float: left;
  /*background: url('../images/main/close.png') no-repeat 0 0;*/
}
.password image {
  width: 7%;
  position: absolute;
  top: 40rpx;
  right: 48rpx;
  height: 15px;
  z-index:100;
}
.register button {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 16px;
  text-align: center; 
  color: #fff;
  background-color: #ff611d;
  border-radius: 30px;
  margin-top: 90rpx; 
  margin-bottom: 30rpx;
}
.register .register-tip1, .register .register-tip2 {
  font-size: 13px;
  color: #666;
  text-align: center;
  display: block;
}
.register .register-tip1 text {
  color: #006cff;
}
.register .register-tip2 text {
  color: #ff611d;  
}